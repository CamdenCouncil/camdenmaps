{
  "swagger": "2.0",
  "info": {
    "title": "Camden-maps API",
    "description": "Investigate and explore the Camden maps API",
    "version": "1.0.0"
  },
  "host": "localhost:8080",
  "schemes": [
    "http",
    "https"
  ],
  "basePath": "/",
  "produces": [
    "application/json"
  ],
  "paths": {
    "services/{service}": {
      "get": {
        "summary": "services",
        "description": "The services endpoint returns a list of organisations that provdie the Camden Council point of interest selected by the user. The response includes information about contact and location. \n",
        "parameters": [
          {
            "name": "service",
            "in": "path",
            "description": "Camden Council run organisation",
            "required": true,
            "type": "string"
          }
        ],
        "tags": [
          "services"
        ],
        "responses": {
          "200": {
            "description": "An array of organisations that provide required service",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Service"
              }
            }
          },
          "default": {
            "description": "Unexpected error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "location/{postcode}": {
      "get": {
        "summary": "Location of user",
        "description": "The Location endpoint returns information about laocation of Camden postcode selected by the user.\n",
        "parameters": [
          {
            "name": "postcode",
            "in": "path",
            "description": "Camden postcode",
            "required": true,
            "type": "string",
            "format": "uuid"
          }
        ],
        "tags": [
          "Location"
        ],
        "responses": {
          "200": {
            "description": "An array containing information about location",
            "schema": {
              "$ref": "#/definitions/AddressSearchResults"
            }
          },
          "default": {
            "description": "Unexpected error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "services/{service}/locations/{postcode}": {
      "get": {
        "summary": "Selected service near specified postcode",
        "description": "The Endpoint will return a list similar to that of services, but this endpoint will return the information in relation to a Camden postcode specified by the user.\n",
        "parameters": [
          {
            "name": "service",
            "in": "path",
            "description": "Select a Camden service",
            "required": true,
            "type": "string"
          },
          {
            "name": "postcode",
            "in": "path",
            "description": "Camden postcode",
            "required": true,
            "type": "string"
          }
        ],
        "tags": [
          "services",
          "Location"
        ],
        "responses": {
          "200": {
            "description": "An array of selected service information",
            "schema": {
              "$ref": "#/definitions/AddressAndService"
            }
          },
          "default": {
            "description": "Unexpected error",
            "schema": {
              "$ref": "Error"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Service": {
      "properties": {
        "Name": {
          "type": "string",
          "description": "Name of service host"
        },
        "Type": {
          "type": "string",
          "description": "Description of service category"
        },
        "Telephone": {
          "type": "string",
          "description": "Contact number for servcie host"
        },
        "OpeningHours": {
          "type": "string",
          "description": "Weekly opening times of service host"
        },
        "URL": {
          "type": "string",
          "description": "URL of service host"
        },
        "Source": {
          "type": "string",
          "description": null
        }
      }
    },
    "AddressSearchResults": {
      "properties": {
        "Area": {
          "type": "string",
          "description": "postcode"
        },
        "East": {
          "type": "string",
          "description": null
        },
        "North": {
          "type": "string",
          "description": null
        },
        "Longitude": {
          "type": "string",
          "description": "Longitudinal point on map"
        },
        "Latitude": {
          "type": "string",
          "description": "latitudinal point on map"
        },
        "AddressAndService": {
          "properties": null
        },
        "poi": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Service"
          }
        }
      }
    },
    "Error": {
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "fields": {
          "type": "string"
        }
      }
    }
  }
}