{
  "swagger": "2.0",
  "info": {
    "title": "Camden-maps API",
    "description": "Investigate and explore the Camden maps API",
    "version": "1.0.0"
  },
  "host": "localhost:0.0.0.0:8080",
  "schemes": [
    "http",
    "https"
  ],
  "basePath": "/",
  "produces": [
    "application/json"
  ],
  "paths": {
    "/services/{service}": {
      "get": {
        "summary": "/services/{service}",
        "description": "The services endpoint returns a list of organisations containing information regarding contact and location of a selected Camden Council service. \n",
        "parameters": [
          {
            "name": "service",
            "in": "query",
            "description": "Camden Council run organisation",
            "required": true,
            "type": "string",
            "format": "uuid"
          }
        ],
        "tags": [
          "services"
        ],
        "responses": {
          "200": {
            "description": "An array of products",
            "schema": {
              "$ref": "Service"
            }
          },
          "default": {
            "description": "Unexpected error",
            "schema": {
              "$ref": "Error"
            }
          }
        }
      }
    },
    "/location/{postcode}": {
      "get": {
        "summary": "/location/{postcode}",
        "description": "The Location postcode endpoint returns information about laocation of Camden postcode.\n",
        "parameters": [
          {
            "name": "postcode",
            "in": "query",
            "description": "Camden postcode",
            "required": true,
            "type": "string",
            "format": "uuid"
          }
        ],
        "tags": [
          "Location"
        ],
        "responses": {
          "200": {
            "description": "An array of services",
            "schema": {
              "$ref": "AddressSearchResults"
            }
          },
          "default": {
            "description": "Unexpected error",
            "schema": {
              "$ref": "Error"
            }
          }
        }
      }
    },
    "/services/{service}/locations/{postcode}": {
      "get": {
        "summary": "Selected service near specified postcode",
        "description": "The Endpoint will return a list of specified services in order of distance to the specified postcode inputed.  \n",
        "parameters": [
          {
            "name": "service",
            "in": "query",
            "description": "Select a Camden service",
            "required": true,
            "type": "string"
          },
          {
            "name": "postcode",
            "in": "query",
            "description": "Camden postcode",
            "required": true,
            "type": "string"
          }
        ],
        "tags": [
          "services",
          "Location"
        ],
        "responses": {
          "200": {
            "description": "An array of selected service information",
            "schema": {
              "$ref": "AddressSearchResults"
            }
          },
          "default": {
            "description": "Unexpected error",
            "schema": {
              "$ref": "Error"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Service": {
      "properties": {
        "Name": {
          "type": "string",
          "description": "Name of service host"
        },
        "Type": {
          "type": "string",
          "description": "Description of service category"
        },
        "Telephone": {
          "type": "string",
          "description": "Contact number for servcie host"
        },
        "OpeningHours": {
          "type": "string",
          "description": "Weekly opening times of service host"
        },
        "URL": {
          "type": "string",
          "description": "URL of service host"
        },
        "Source": {
          "type": "string",
          "description": null
        }
      }
    },
    "AddressSearchResults": {
      "properties": {
        "Area": {
          "type": "string",
          "description": "postcode"
        },
        "East": {
          "type": "string",
          "description": null
        },
        "North": {
          "type": "string",
          "description": null
        },
        "Longitude": {
          "type": "string",
          "description": "Longitudinal point on map"
        },
        "Latitude": {
          "type": "string",
          "description": "latitudinal point on map"
        }
      }
    },
    "Error": {
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "fields": {
          "type": "string"
        }
      }
    }
  }
}