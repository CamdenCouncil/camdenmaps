{
  "swagger": "2.0",
  "info": {
    "title": "Camden-maps API",
    "description": "Investigate and explore the Camden maps API",
    "version": "1.0.0"
  },
  "host": "0.0.0.0:8080",
  "schemes": [
    "https"
  ],
  "basePath": "/",
  "produces": [
    "application/json"
  ],
  "paths": {
    "/services/{service}": {
      "get": {
        "summary": "services",
        "description": "The services endpoint returns a list of organisations that provide the Camden Council point of interest selected by the user. The response includes information about contact and location. \n",
        "parameters": [
          {
            "name": "service",
            "in": "path",
            "description": "Camden Council run organisation",
            "required": true,
            "type": "string"
          }
        ],
        "tags": [
          "services"
        ],
        "responses": {
          "200": {
            "description": "An array of organisations that provide required service",
            "schema": {
              "$ref": "Service"
            }
          },
          "default": {
            "description": "Unexpected error",
            "schema": {
              "$ref": "Error"
            }
          }
        }
      }
    },
    "/locations/{postcode}": {
      "get": {
        "summary": "Location of user",
        "description": "The Location endpoint returns information about laocation of Camden postcode selected by the user.\n",
        "parameters": [
          {
            "name": "postcode",
            "in": "path",
            "description": "Camden postcode",
            "required": true,
            "type": "string"
          }
        ],
        "tags": [
          "Location"
        ],
        "responses": {
          "200": {
            "description": "An array containing information about location",
            "schema": {
              "$ref": "Location"
            }
          },
          "default": {
            "description": "Unexpected error",
            "schema": {
              "$ref": "Error"
            }
          }
        }
      }
    },
    "/services/{service}/locations/{postcode}": {
      "get": {
        "summary": "Selected service near specified postcode",
        "description": "The Endpoint will return a list similar to that of services, but this endpoint will return the information in relation to a Camden postcode specified by the user.\n",
        "parameters": [
          {
            "name": "service",
            "in": "path",
            "description": "Select a Camden service",
            "required": true,
            "type": "string"
          },
          {
            "name": "postcode",
            "in": "path",
            "description": "Camden postcode",
            "required": true,
            "type": "string"
          }
        ],
        "tags": [
          "services",
          "Location"
        ],
        "responses": {
          "200": {
            "description": "An array of selected service information",
            "schema": {
              "$ref": "Service"
            }
          },
          "default": {
            "description": "Unexpected error",
            "schema": {
              "$ref": "Error"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Service": {
      "properties": {
        "LocationID": {
          "type": "string"
        },
        "BuildingName": {
          "type": "string"
        },
        "StreetNum": {
          "type": "string"
        },
        "Street": {
          "type": "string"
        },
        "PostCode": {
          "type": "string"
        },
        "Longitude": {
          "type": "string"
        },
        "Latitude": {
          "type": "string"
        },
        "ViewLat": {
          "type": "string"
        },
        "ViewLng": {
          "type": "string"
        },
        "View": {
          "type": "string"
        },
        "Distance": {
          "type": "string"
        },
        "display": {
          "type": "object"
        }
      }
    },
    "Location": {
      "properties": {
        "Area": {
          "type": "string"
        },
        "East": {
          "type": "string"
        },
        "North": {
          "type": "string"
        },
        "Longitude": {
          "type": "string"
        },
        "Latitude": {
          "type": "string"
        }
      }
    },
    "Error": {
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "fields": {
          "type": "string"
        }
      }
    }
  }
}